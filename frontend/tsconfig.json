{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "src/typings.d.ts"],
  "exclude": ["node_modules", "dist"]
}
